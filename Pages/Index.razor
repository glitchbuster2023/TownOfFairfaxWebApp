@code {
    private List<Post> _posts;
    private Post postModel = new Post();

    protected override async Task OnInitializedAsync()
    {
        this._posts = await GetPosts();
    }

    protected async Task<List<Post>> GetPosts()
    {
        var httpClient = _clientFactory.CreateClient();

        var posts = await httpClient.GetFromJsonAsync<List<Post>>("https://localhost:7095/api/posts/getposts");

        return posts!;
    }

    protected async Task CreatePost()
    {
        var httpClient = _clientFactory.CreateClient();
        using var response = await httpClient.PostAsJsonAsync<Post>("https://localhost:7095/api/posts/createpost", postModel);
        postModel = new Post();

        _posts.Clear();
        _posts = await GetPosts();
        StateHasChanged();
    }

}